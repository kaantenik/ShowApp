<script src="https://cdn.tailwindcss.com"></script>
<div class="container mx-auto mt-12 contact">
  <h1 class="mb-4 text-4xl font-bold">İletişim</h1>
  <%= form_with(url: '/contact_submit', method: 'post', class: 'max-w-md mx-auto') do |form| %>
    <div class="mb-4">
      <%= label_tag :name, 'İsim', class: 'block text-lg font-bold mb-2' %>
      <%= form.text_field :name, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-green-500 text-black' %>
    </div>
    <div class="mb-4">
      <%= label_tag :email, 'E-posta', class: 'block text-lg font-bold mb-2' %>
      <%= form.email_field :email, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-green-500 text-black' %>
    </div>
    <div class="mb-6">
      <%= label_tag :message, 'Mesaj', class: 'block text-lg font-bold mb-2' %>
      <%= form.text_area :message, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:border-green-500 text-black' %>
    </div>
    <%= form.submit 'Gönder', class: 'bg-green-900 text-white px-6 py-3 rounded-lg shadow-md hover:bg-green-600 transition-colors duration-300' %>
  <% end %>
</div>
